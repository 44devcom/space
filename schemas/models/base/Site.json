{
  "$schema": "../../.cursor/rules/models.schema.json",
  "title": "Site",
  "type": "object",
  "description": "Base site model for website configurations",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Primary key identifier",
      "x-primary-key": true,
      "x-auto-increment": true
    },
    "name": {
      "type": "string",
      "description": "Site name",
      "maxLength": 255
    },
    "domain": {
      "type": "string",
      "description": "Site domain",
      "maxLength": 255,
      "x-index": true,
      "x-unique": true
    },
    "url": {
      "type": "string",
      "description": "Site base URL",
      "maxLength": 1000
    },
    "description": {
      "type": "string",
      "description": "Site description"
    },
    "active": {
      "type": "boolean",
      "description": "Whether the site is active",
      "default": true
    },
    "settings": {
      "type": "object",
      "description": "Site settings stored as JSON"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata stored as JSON"
    },
    "createdAt": {
      "type": "string",
      "description": "Record creation timestamp",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "description": "Record update timestamp",
      "format": "date-time"
    }
  },
  "required": ["id", "name", "domain"]
}


