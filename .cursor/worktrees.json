{
  "version": 3,

  "fastapi": {
    "stack": "fastapi",
    "language": "python",
    "root": ".",
    "src": "src",
    "domain": "src/domain",
    "entities": "src/domain/entities",
    "valueObjects": "src/domain/value_objects",
    "aggregates": "src/domain/aggregates",
    "events": "src/domain/events",
    "repositories": "src/domain/repositories",
    "services": "src/domain/services",

    "api": {
      "routes": "src/api/routes",
      "controllers": "src/api/controllers",
      "schemas": "src/api/schemas",
      "graphql": "src/api/graphql",
      "openapi": "src/api/openapi"
    },

    "infrastructure": {
      "db": "src/infrastructure/db",
      "orm": "src/infrastructure/db/orm",
      "migrations": "src/infrastructure/db/migrations"
    },

    "tests": {
      "unit": "tests/unit",
      "bdd": "tests/bdd/features",
      "bddSteps": "tests/bdd/steps",
      "tdd": "tests/unit",
      "integration": "tests/integration"
    },

    "docker": {
      "root": "docker",
      "compose": "docker/docker-compose.yml",
      "env": "docker/.env",
      "services": "docker/services"
    },

    "setup-worktree": [
      "python3 -m venv venv",
      "source venv/bin/activate && pip install -r requirements.txt || true",
      "cp $ROOT_WORKTREE_PATH/.env .env || true"
    ]
  },

  "laravel": {
    "stack": "laravel",
    "language": "php",
    "root": ".",
    "src": "app",
    "domain": "app/Domain",
    "entities": "app/Domain/Entities",
    "valueObjects": "app/Domain/ValueObjects",
    "aggregates": "app/Domain/Aggregates",
    "events": "app/Domain/Events",
    "repositories": "app/Domain/Repositories",
    "services": "app/Domain/Services",

    "api": {
      "controllers": "app/Http/Controllers",
      "routes": "routes",
      "graphql": "graphql",
      "openapi": "storage/api"
    },

    "infrastructure": {
      "db": "database",
      "orm": "app/Models",
      "migrations": "database/migrations"
    },

    "tests": {
      "unit": "tests/Unit",
      "feature": "tests/Feature",
      "bdd": "tests/Bdd/features",
      "bddSteps": "tests/Bdd/steps",
      "tdd": "tests/Unit"
    },

    "docker": {
      "root": "docker",
      "compose": "docker/docker-compose.yml",
      "env": ".env",
      "services": "docker/services"
    },

    "setup-worktree": [
      "composer install || true",
      "php artisan key:generate || true",
      "cp $ROOT_WORKTREE_PATH/.env .env || true"
    ]
  },

  "express": {
    "stack": "express",
    "language": "typescript",
    "root": ".",
    "src": "src",
    "domain": "src/domain",
    "entities": "src/domain/entities",
    "valueObjects": "src/domain/value_objects",
    "aggregates": "src/domain/aggregates",
    "events": "src/domain/events",
    "repositories": "src/domain/repositories",
    "services": "src/domain/services",

    "api": {
      "controllers": "src/api/controllers",
      "routes": "src/api/routes",
      "middlewares": "src/api/middlewares",
      "graphql": "src/api/graphql",
      "openapi": "src/api/openapi"
    },

    "infrastructure": {
      "db": "src/infrastructure/db",
      "orm": "src/infrastructure/db/typeorm",
      "migrations": "src/infrastructure/db/migrations"
    },

    "tests": {
      "unit": "tests/unit",
      "bdd": "tests/bdd/features",
      "bddSteps": "tests/bdd/steps",
      "tdd": "tests/unit",
      "integration": "tests/integration"
    },

    "docker": {
      "root": "docker",
      "compose": "docker/docker-compose.yml",
      "env": ".env",
      "services": "docker/services"
    },

    "setup-worktree": [
      "npm install || yarn install",
      "cp $ROOT_WORKTREE_PATH/.env .env || true"
    ]
  },

  "android": {
    "stack": "android",
    "language": "kotlin",
    "root": ".",
    "src": "app/src/main",
    "java": "app/src/main/java",
    "kotlin": "app/src/main/kotlin",
    "res": "app/src/main/res",
    "assets": "app/src/main/assets",
    "manifest": "app/src/main/AndroidManifest.xml",
    "build": "app/build",
    "output": "app/build/outputs/apk",
    "native": "app/src/main/jniLibs",

    "domain": {
      "entities": "app/src/main/kotlin/domain/entities",
      "repositories": "app/src/main/kotlin/domain/repositories",
      "useCases": "app/src/main/kotlin/domain/useCases"
    },

    "presentation": {
      "activities": "app/src/main/kotlin/presentation/activities",
      "fragments": "app/src/main/kotlin/presentation/fragments",
      "viewModels": "app/src/main/kotlin/presentation/viewModels",
      "adapters": "app/src/main/kotlin/presentation/adapters",
      "ui": "app/src/main/res/layout"
    },

    "data": {
      "repositories": "app/src/main/kotlin/data/repositories",
      "datasources": "app/src/main/kotlin/data/datasources",
      "local": "app/src/main/kotlin/data/local",
      "remote": "app/src/main/kotlin/data/remote",
      "models": "app/src/main/kotlin/data/models"
    },

    "tests": {
      "unit": "app/src/test/kotlin",
      "androidTest": "app/src/androidTest/kotlin",
      "instrumented": "app/src/androidTest/kotlin"
    },

    "docker": {
      "root": "docker",
      "compose": "docker/docker-compose.yml",
      "env": ".env",
      "services": "docker/services",
      "android": "docker/android"
    },

    "setup-worktree": [
      "./gradlew --version || true",
      "cp $ROOT_WORKTREE_PATH/local.properties local.properties || true",
      "cp $ROOT_WORKTREE_PATH/.env .env || true"
    ]
  }
}
